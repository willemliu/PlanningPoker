<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.willim.poker" version="1.1.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Insomnia">
        <param name="android-package" value="nl.xservices.plugins.Insomnia" />
    </feature>
    <feature name="Vibration">
        <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/drawable-hdpi/icon.png" />
    <icon density="mdpi" src="res/drawable-hdpi/icon.png" />
    <icon density="hdpi" src="res/drawable-hdpi/icon.png" />
    <icon density="xhdpi" src="res/drawable-hdpi/icon.png" />
    <splash density="land-hdpi" src="res/drawable-land-hdpi/screen.png" />
    <splash density="land-ldpi" src="res/drawable-land-ldpi/screen.png" />
    <splash density="land-mdpi" src="res/drawable-land-mdpi/screen.png" />
    <splash density="land-xhdpi" src="res/drawable-land-hdpi/screen.png" />
    <splash density="port-hdpi" src="res/drawable-port-hdpi/screen.png" />
    <splash density="port-ldpi" src="res/drawable-port-hdpi/screen.png" />
    <splash density="port-mdpi" src="res/drawable-port-hdpi/screen.png" />
    <splash density="port-xhdpi" src="res/drawable-port-hdpi/screen.png" />
    <name>PlanningPoker</name>
    <description>
        PlanningPoker is an app to facilitate the Planning Poker sessions for Agile Development.
    </description>
    <author email="webmaster@willim.nl" href="http://www.willim.nl">
        WilliM
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="ws://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="windows-target-version" value="10.0" />
    <preference name="windows-phone-target-version" value="10.0" />
</widget>
